<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
		<% for (let index = 0; index < products.length; index++) { %>
		<%	const element = products[index]; %>
			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%element.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%element.image %>" alt="imagen de producto">
						</figure>
						<%const toThousand = n =>n.toString().replace(/\B(?=(\d{3})+(?!\d))/g,".";%>
						<article class="product-box_data">
							<% let finalPrice= product.price -product.price *product.discount /100; finalPrice= toThousand(finalPrice));%>
							<h2>$<%= finalPrice %></h2>
							<span><%element.discount %> OFF</span>
							<p><%element.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
		
		</div>
	</div>
	<!-- /todos los productos -->
<% } %> 
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>